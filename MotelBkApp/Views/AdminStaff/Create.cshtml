@using MotelBkApp.Data.ViewModels;
@model RegisterVM;

@{
    ViewData["Title"] = "Create Staff";
}

<div class="col-12 justify-content-center">
    <div class="container col-md-8">
        @if (TempData["StaffCreate"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["StaffCreate"] </span>
            </div>
        }
        <h3 class="py-3">Create Staff</h3>
        <div class="form-container">
            <form asp-controller="AdminStaff" asp-action="Create">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="FirstName" class="control-label mt-2"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="LastName" class="control-label mt-2"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Motel.Id" class="control-label mt-2"></label>
                        <input asp-for="Motel.Id" class="form-control" />
                        <span asp-validation-for="Motel.Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <label asp-for="UserName" class="control-label mt-2"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="DOB" class="control-label mt-2"></label>
                        <input type="date" asp-for="DOB" class="form-control" />
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <label asp-for="Email" class="control-label mt-2"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="PhoneNumber" class="control-label mt-2"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <label asp-for="Password" class="control-label mt-2"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="ConfirmPassword" class="control-label mt-2"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mt-4">
                    <input class="btn btn-outline-success float-right" type="submit" value="Create" />
                    <a class="btn btn-outline-secondary" asp-controller="AdminStaff" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>