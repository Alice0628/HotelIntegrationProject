
@using MotelBookingApp.Data.ViewModels
@model NewTypeVM
@{
    ViewData["Title"] = "Add a Room Type";
}

<div class="row">
    <div class="col-md-8 offset-2">
       @* @if (TempData["AirportCreateOption"] != null)
        {
            <div id="AirportCreateOption" class="flash alert alert-warning">
                @TempData["AirportCreateOption"]
            </div>
        }*@
        <h2>Add RoomType</h2>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Id">Id</label>
                        <input asp-for="Id" class="form-control form-control-sm" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control form-control-sm" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price">Price</label>
                        <input asp-for="Price" class="form-control form-control-sm" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image">Image</label>
                      
                        <img id="Preview" src="#" alt="Motel image" />
                        <input type="file" asp-for="Image" id="imageFile" onchange="" class="form-control form-control-sm" />
                        <label for="imageFile">Choose image</label>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Sleep">Sleep</label>
                        <input asp-for="Sleep" class="form-control form-control-sm" />
                        <span asp-validation-for="Sleep" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Amount">Amount</label>
                        <input asp-for="Amount" class="form-control form-control-sm" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                   @* <div class="form-group">
                        <label asp-for="Description">Motel</label>
                        <input asp-for="Description" class="form-control form-control-sm" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>*@

                    <br>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" asp-controller="RoomType"
                                asp-route-id="@Model.Id">
                            Update
                        </button>
                        <a class="btn btn-secondary" asp-controller="RoomType" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    setTimeout(function () {
        document.getElementById("AirportCreateOption").style.display = "none";
    }, 3000);
</script>


<script>
    function previewImage() {
        var preview = document.querySelector('#preview');
        var file = document.querySelector('input[type=file]').files[0];
        var reader = new FileReader();

        reader.onloadend = function () {
            preview.src = reader.result;
        }

        if (file) {
            reader.readAsDataURL(file);
        }
    }
</script>

