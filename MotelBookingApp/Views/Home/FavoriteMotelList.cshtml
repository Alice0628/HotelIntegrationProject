@model IEnumerable<Motel>;
@{
    ViewData["Title"] = "All motels";
}

@if (TempData["noImage"] != null)
{
    <div>@TempData["noImage"] </div>
}

@if (TempData["no result"] != null)
{
    <div>@TempData["no result"]</div>
}
<div class="container d-flex justify-content-center mb-5">
    <div class="col-10">
        <div class="register-photo">
            <div class="container">
                <img src="https://ninamagon.com/wp-content/uploads/2020/02/Hotel-Header-Image.png" alt="" width="100%" />
            </div>
        </div>
        <h2 class="text-center">Favorite Motels</h2>
        <br>
   

        <div class="container d-flex justify-content-center">
            <div class="col-10">
                @if (TempData["MotelOption"] != null)
                {
                    <div id="AirportOption" class="flash alert alert-warning">
                        @TempData["MotelOption"]
                    </div>
                }

                <div class="card text-black bg-light">
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>

                                    <th class="col-2">Name</th>
                                    <th class="col-2">City</th>
                                    <th class="col-2 text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var motel in Model)
                                {
                                    <tr>
                                        <td>@motel.Name</td>
                                        <td>@motel.City </td>
                                        <td class="d-flex justify-content-center">
                                            <a asp-action="DeletFavmotel"
                                           asp-route-id="@motel.Id"><i class="fa-solid fa-trash" style="color:red"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

