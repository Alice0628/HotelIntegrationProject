@using MotelBookingApp.Data.ViewModels
@model List<RoomInputModel>

@{
    ViewData["Title"] = $"Rooms of Motel";
}
<div class="container">
    @if (TempData["roomRes"] != null)
    {
        <div class="flash alert alert-warning">
            @TempData["roomRes"];
        </div>
    }
    @if (Model != null)
    {
        <div class="row">
            <div class="col-10">
                <form method="post">
                    <table>
                        <thead>
                            <tr>
                                <th class="col-2">Image</th>
                                <th class="col-2">Type</th>
                                <th class="col-2">Room Number</th>
                                <th class="col-2">Price</th>
                                <th class="col-2"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var r in Model)
                            {
                                <tr class="m-1">
                                    <td class="col-2">
                                        <img src=@r.RoomTypeImage width="150" heiht="150" alt="Motel picture" />
                                    </td>
                                    <td class="col-2">
                                        @r.RoomTypeName
                                    </td>
                                    <td class="col-2">
                                        @r.RoomNum
                                    </td>
                                    <td class="col-2">
                                        $ @r.Price
                                    </td>
                                    <td class="col-2">
                                        <a class="btn btn-outline-primary" asp-action="RoomDetail" asp-route-id="@r.Id"> Book </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                </table>
            </form>
            
        </div>
    </div>
    }
    <a class="btn btn-outline-primary" asp-action="CityMotelList">check other motels</a>

</div>
