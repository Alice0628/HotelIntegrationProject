@model Comment
@{
    ViewData["Title"] = "Delete a comment";
}
@if (TempData["removeComment"] != null)
{
    <div id="removeComment" class="flash alert alert-danger">@TempData["removeComment"]</div>
}
<div onload="showScore()" class="container mb-5">
    <div class="col-md-10 offset-2">

        <form method="post">
            <div class="flash alert alert-warning">Are you sure you want to delete this comment?</div>
            <button type="submit" asp-route-id="@Model.Id" class="btn btn-danger">Delete</button>
            <a asp-action="CityMotelDetail" asp-route-id="@Model.Motel.Id" class="btn btn-outline-primary">Cancle</a>
        </form>

        <div class="col-md-8">
            <p>@Model.Motel.Name</p>
            <p>@Model.Content</p>
            <p>@Model.Score</p>
        </div>
    </div>
</div>

