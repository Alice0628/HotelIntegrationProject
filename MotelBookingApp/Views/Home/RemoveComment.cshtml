@model Comment
@{
    ViewData["Title"] = "Delete a comment";
}

<div onload="showScore()" class="container">
    <div class="col-md-10 offset-2">

        <form method="post">
            <input hidden name="motelId" value="@Model.Motel.Id" />
            <div class="flash alert alert-warning">Are you sure you want to delete this comment?</div>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="CityMotelDetail" asp-rout-id="@Model.Motel.Id" class="btn btn-outline-primary">Cancle</a>
        </form>

        <div class="col-md-8">
            <p>@Model.Motel.Name</p>
            <p>@Model.Content</p>
            <p>@Model.Score</p>
        </div>
    </div>
</div>


