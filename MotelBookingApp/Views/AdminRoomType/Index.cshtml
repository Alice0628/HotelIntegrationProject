@model List<RoomType>
@{
    ViewData["Title"] = "List of room types";
}

<div class="container">
    <h2 class="text-center">List of Room Types</h2>
    <br>
    <!-- Search Bar -->
    <div class="container d-flex justify-content-center">
        <div class="col-8">
            <form class="form-inline my-2 my-lg-0" method="post" asp-action="Index">
                <div class="input-group">
                    <input type="search" name="searchWord" class="form-control rounded" placeholder="Search..." />
                    <button type="submit" class="btn btn-outline-primary">Search</button>
                </div>
            </form>
        </div>
    </div>
    <br>
    <!-- RoomTypes List -->
    <div class="col-8" style="margin:auto">

        <a class="btn btn-primary" style="margin-bottom: 10px;"
           asp-action="Create">Add a Room Type</a>
        @if (TempData["TypeOption"] != null)
        {
            <div id="AirportOption" class="flash alert alert-warning">
                @TempData["TypeOption"]
            </div>
        }
        <div class="card text-black bg-light">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="col-3 text-center">Name</th>
                            <th class="col-3 text-center">sleep</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rt in Model)
                        {
                           <tr>
                                <td class="col-3 text-center">@rt.Name</td>

                                <td class="col-3 text-center">@rt.Sleep</td>
                                <td class="d-flex justify-content-center">
                                    <a class="btn btn-sm btn-warning" style="margin-right:4px;"
                                   asp-action="Detail"
                                   asp-route-id="@rt.Id">Detail</a>
                                    <a class="btn btn-sm btn-info" style="margin-right:4px;"
                                   asp-action="Edit"
                                   asp-route-id="@rt.Id">Edit</a>
                                    <a class="btn btn-sm btn-danger" asp-action="Delete"
                                   asp-route-id="@rt.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

<script>
    setTimeout(function () {
        document.getElementById("AirportOption").style.display = "none";
    }, 3000);
</script>












