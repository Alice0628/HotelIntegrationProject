@model RoomType
@{
    ViewData["Title"] = "Delete an RoomType";
}

<div class="container col-8 mb-5">
       @if (TempData["TypeDeleteOption"] != null)
    {
    <div id="TypeDeleteOption" class="flash alert alert-warning">
    @TempData["TypeDeleteOption"]
    </div>
    }
    <div class="flash alert alert-success">
        <p>Are you sure you want to delete roomType @Model.Id ?</p>
        <form method="post">
            <button type="submit" class="btn btn-danger" asp-route-id="@Model.Id">Delete</button>
            <a class="btn btn-primary" asp-action="Index">Cancel</a>
        </form>
    </div>

    <div>
        <dl>
            <dt></dt>
            <dd><img src=https://motelbooking.s3.us-east-2.amazonaws.com/@Model.ImageUrl alt="RoomType logo" width="150" height="150" /></dd>
        </dl>
        <dl>
            <dt>Id</dt>
            <dd>@Model.Id</dd>
        </dl>
        <dl>
            <dt>Name</dt>
            <dd>@Model.Name</dd>
        </dl>

        <dl>
            <dt>Sleep</dt>
            <dd>@Model.Sleep</dd>
        </dl>

        <dl>
            <dt>Description</dt>
            <dd>@Model.Description</dd>
        </dl>
    </div>
</div>
<script>
    setTimeout(function () {
        document.getElementById("TypeDeleteOption").style.display = "none";
    }, 3000);
</script>