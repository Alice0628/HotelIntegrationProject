@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Index";
}
@if (TempData["DeleteCartItem"] != null)
{
    <div id="DeleteCartItem" class="flash alert alert-warning">
        @TempData["DeleteCartItem"]
    </div>
}

<h2 class="text-center">Shopping Cart</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("User Name")
                    </th>
                    <th>
                        @Html.DisplayName("Motel Name")
                    </th>
                    <th>
                        @Html.DisplayName("Room Type")
                    </th>
                    <th>
                        @Html.DisplayName("Checkin Date")
                    </th>
                    <th>
                        @Html.DisplayName("Checkout Date")
                    </th>
                    <th>
                        @Html.DisplayName("Price")
                    </th>
                    <th class="text-center">
                        Remove
                    </th>
                </tr>
            </thead>
            <tbody id="myTable">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @(item.User.UserName)
                        </td>
                        <td>
                            @(item.Motel.Name)
                        </td>
                        <td>
                            @(item.Room.RoomType.Name)
                        </td>
                        <td>
                            @(((DateTime)item.CheckinDate).ToString("yyyy-MM-dd"))
                        </td>
                        <td>
                            @(((DateTime)item.CheckoutDate).ToString("yyyy-MM-dd"))
                        </td>
                        <td>
                            $ @(item.Room.Price)
                        </td>
                        <td class="d-flex justify-content-center">
                            <a asp-controller="Cart" asp-action="Remove" asp-route-Id="@item.Id"
                           class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
                <tr>
                    <td align="right" colspan="4">
                        Sum: $
                    </td>
                    <td>
                        @ViewBag.Total
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

</div>
<div class="d-flex justify-content-start">
    <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-info" style="margin-right:4px;">
        Continue Shoping
    </a>
    @using (Html.BeginForm("CreateCheckoutSession", "Checkout", FormMethod.Post))
    {
        <button type="submit" class="btn btn-sm btn-primary">To Pay</button>
    }
</div>

<script>
    setTimeout(function () {
        document.getElementById("DeleteCartItem").style.display = "none";
    }, 3000);
</script>