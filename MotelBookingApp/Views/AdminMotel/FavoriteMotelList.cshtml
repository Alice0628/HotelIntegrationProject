@model IEnumerable<FavoriteMotelList>;
@{
    ViewData["Title"] = "All motels";
}

@if (TempData["noImage"] != null)
{
    <div>@TempData["noImage"] </div>
}

@if (TempData["no result"] != null)
{
    <div>@TempData["no result"]</div>
}
<div class="container">
    <h2 class="text-center">Favorite Motels</h2>
    <br>
    <!-- Search Bar -->
    <div class="container d-flex justify-content-center">
        <div class="col-8">
            <form class="form-inline my-2 my-lg-0" method="post" asp-action="Index">
                <div class="input-group">
                    <input type="search" name="searchKeyWord" class="form-control rounded" placeholder="Search..." />
                    <button type="submit" class="btn btn-outline-primary">Search</button>
                </div>
            </form>
        </div>
    </div>
    <br />

    <div class="container d-flex justify-content-center">
        <div class="col-8">
            @if (TempData["MotelOption"] != null)
            {
                <div id="AirportOption" class="flash alert alert-warning">
                    @TempData["MotelOption"]
                </div>
            }

            <div class="card text-black bg-light">
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>

                                <th class="col-2">User</th>
                                <th class="col-2">MotelId</th>
                                <th class="col-2">MotelName</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var motel in Model)
                            {
                                <tr>
                                    <td>@motel.Owner.UserName</td>
                                    <td>@motel.Motel.Id</td>
                                    <td>@motel.Motel.Name</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

