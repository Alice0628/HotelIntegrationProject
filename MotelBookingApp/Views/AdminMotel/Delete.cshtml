@using MotelBookingApp.Data.ViewModels
@model MotelInputModel
@{
    ViewData["Title"] = "Delete a motel";
}
<div class="container col-8">
    @if (TempData["MotelDeleteOption"] != null)
    {
        <div id="MotelDeleteOption" class="flash alert alert-warning">
            @TempData["MoteleleteOption"]
        </div>
    }
    
    <div class="flash alert alert-success">
        <p>Are you sure you want to delete Motel @Model.Name ?</p>
        <form method="post">
            <button type="submit" class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</button>
            <a class="btn btn-primary" asp-action="Index">Cancel</a>
        </form>
    </div>

    @{
        ViewData["Title"] = "Detail of motel";
    }
</div>
<div class="row">
    <div class="col-md-8 offset-2">
        <h2>Motel Detail</h2>
        <div class="container">
            <div class="d-flex justify-content-around align-content-center">

                <div>

                    <dl>
                        <dt>Id</dt>
                        <dd>@Model.Id</dd>
                    </dl>
                    <dl>
                        <dt>Name</dt>
                        <dd>@Model.Name</dd>
                    </dl>
                    <dl>
                        <dt>Address</dt>
                        <dd>@Model.Address, @Model.City, @Model.Province, @Model.PostalCode </dd>
                    </dl>

                </div>
                <div>
                    <img width="400" height="250" src=@Model.ImageUrl />

                </div>
            </div>
