@using Microsoft.AspNetCore.Identity
@using MotelBookingApp.Data.ViewModels;
@model EditStaffVM;
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Edit User";
}

<div class="col-12 justify-content-center mb-5">
    <div class="register-photo">
        <div class="container col-md-8">
            @if (User.IsInRole("User"))
            {
                <img src="https://t4.ftcdn.net/jpg/03/81/89/61/360_F_381896172_z2QE8bV3z7FxzpGM6uzukJ3JAz6y6N0w.jpg" alt="" width="100%" />
            }
            else
            {
                <img src="https://media.licdn.com/dms/image/C4E12AQHFQZv1viZcbw/article-cover_image-shrink_600_2000/0/1526901637188?e=2147483647&v=beta&t=307kuoZQRustj0H5x4YPQFva3n3VxCkYHI065DxsF00" alt="" width="100%" />
            }
        </div>
        <br />
        @if (TempData["UserEditOption"] != null)
        {
            <div id="UserEditOption" class="container col-md-8 flash alert alert-warning">
                @TempData["UserEditOption"]
            </div>
        }
        <div class="container col-md-8">
            <h3 class="pt-4 pb-2">Edit User</h3>
            <div class="form-container">
                <form method="post" asp-controller="Profile" asp-action="Edit">
                    <div class="row" hidden>
                        <div class="col-12">
                            <label asp-for="Id" class="control-label mt-2"></label>
                            <input asp-for="Id" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <label asp-for="FirstName" class="control-label mt-2"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="LastName" class="control-label mt-2"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <label asp-for="UserName" class="control-label mt-2"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="DOB" class="control-label mt-2"></label>
                            <input type="date" asp-for="DOB" value="@Model.DOB.ToString("yyyy-MM-dd")" class="form-control" />
                            <span asp-validation-for="DOB" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <label asp-for="Email" class="control-label mt-2"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="PhoneNumber" class="control-label mt-2"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group my-4">
                        <button type="submit" class="btn btn-outline-success" asp-route-id="@Model.Id">Update</button>
                        <a class="btn btn-outline-secondary" asp-controller="Profile" asp-action="Detail" asp-route-id="@Model.Id">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    setTimeout(function () {
        document.getElementById("UserEditOption").style.display = "none";
    }, 3000);
</script>