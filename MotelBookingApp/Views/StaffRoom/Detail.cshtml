@model MotelBookingApp.Models.Room
@{
    ViewData["Title"] = "Detil of Room";
}
<div class="container">
    <div class="col-md-8 offset-2">
        <h2>RoomType Detail</h2>

        <div class="d-flex justify-content-around align-content-center">
            <div style="margin:1rem 0">
                @*<img width="400" height="250" src=@Model.ImageUrl />*@
                <div class="form-group text-center" style="margin-top: 0.5rem;">
                    <a class="btn btn-primary float-right" asp-control="RoomType" asp-action="Edit"
                       asp-route-id="@Model.Id">Update</a>
                    <a class="btn btn-secondary" asp-action="Index">Back To List</a>
                </div>
            </div>

            <div>
                <dl>
                    <dt>Id</dt>
                    <dd>@Model.Id</dd>
                </dl>


                <dl>
                    <dt>Room Number</dt>
                    <dd>@Model.RoomNum</dd>
                </dl>

                <dl>
                    <dt>Price</dt>
                    <dd>@Model.Price</dd>
                </dl>

                <dl>
                    <dt>Motel</dt>
                    <dd>@Model.Motel.Name</dd>
                </dl>
                <dl>
                    <dt>Room Type</dt>
                    <dd>@Model.RoomType.Name</dd>
                </dl>
            </div>

        </div>

    </div>

</div>



