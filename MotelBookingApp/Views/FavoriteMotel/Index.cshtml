@model IEnumerable<MotelBookingApp.Models.FavoriteMotel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="MotelList">Motel List</a>

</p>

<p>
    <a asp-action="FavoriteMotelList">Favorite Motel List</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="col-2">Favorite Id</th>
            <th class="col-2">Motel Id</th>
            <th class="col-2">Motel Name</th>
 
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>@item.Id</td>
                <td>@item.MotelId</td>
                <td>@item.Motel.Name</td>
         
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
