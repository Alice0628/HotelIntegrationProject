@model ResetPasswordViewModel
@using MotelBookingApp.Data.ViewModels;

@{
    ViewData["Title"] = "Reset password";
}

<h2>Reset your password.</h2>
<hr />
@if (TempData["ResetPassError"] != null)
{
    <div id="ResetPassError" class="col-md-12 alert alert-danger">
        <span><b>Sorry!</b> - @TempData["ResetPassError"] </span>
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Code" type="hidden" />
            <div class="form-group" >
                <label asp-for="Email">Registered Email</label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="mt-3"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="mt-3"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <input class="btn btn-outline-success mt-4" type="submit" value="Reset" />
        </form>
    </div>
</div>

<script>
    setTimeout(function () {
        document.getElementById("ResetPassError").style.display = "none";
    }, 3000);
</script>
